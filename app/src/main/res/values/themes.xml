<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LiveProject" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="bottomSheetStyle">@style/BottomNav</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>

    </style>

    <style name="SliderStyle" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/TooltipStyle</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="TooltipStyle" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/green</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/green</item>
    </style>

    <!-- Custom BottomBar style -->
    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="background">@color/white</item>
    </style>


    <!-- Custom text appearance for active BottomNavigationView item -->
    <style name="BottomNavTextAppearanceActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <!-- Custom text appearance for inactive BottomNavigationView item -->
    <style name="BottomNavTextAppearanceInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#ABABAB</item>
    </style>

    <style name="Theme.LiveProject" parent="Base.Theme.LiveProject" />

</resources>